# ğŸ›  FunciÃ³n para pedir entrada con opciÃ³n de salir
def pedir_dato(mensaje):
    dato = input(mensaje).strip()
    if dato.lower() == "salir":
        print("ğŸ‘‹ Saliendo del programa... Â¡Hasta la prÃ³xima!")
        sys.exit(0)
    return dato

try:
    # ğŸ“Œ Mostrar el logo al iniciar
    print(ascii_art)
    print("ğŸ” CustomWordlist - Generador de Diccionarios de ContraseÃ±as Personalizadas")
    print(f"âš¡ Modo: {'EXTENDIDO' if '--pro' in sys.argv else 'NORMAL'}\n")

    # ğŸ¤ Preguntar datos al usuario
    nombre = pedir_dato("ğŸ‘¤ Nombre de la persona: ")
    apellido = pedir_dato("ğŸ‘¤ Apellido: ")
    fecha_nacimiento = pedir_dato("ğŸ“† AÃ±o de nacimiento (ej: 1995): ")
    nombre_pareja = pedir_dato("ğŸ’‘ Nombre de la pareja (Enter para omitir): ")
    fecha_nacimiento_pareja = pedir_dato("ğŸ“† AÃ±o de nacimiento de la pareja (Enter para omitir): ")
    nombre_mascota = pedir_dato("ğŸ¶ Nombre de la mascota (Enter para omitir): ")
    ciudad = pedir_dato("ğŸ™ Ciudad donde vive: ")
    color_favorito = pedir_dato("ğŸ¨ Color favorito: ")
    apodo = pedir_dato("ğŸ”– Apodo de la persona (Enter para omitir): ")

    # ğŸ“‹ Lista de palabras base (eliminando entradas vacÃ­as)
    base_words = [nombre, apellido, fecha_nacimiento, nombre_pareja, fecha_nacimiento_pareja, 
                  nombre_mascota, ciudad, color_favorito, apodo]
    base_words = [word for word in base_words if word]  

    # ğŸ›  FunciÃ³n para generar variaciones de contraseÃ±as
    def generate_passwords(base_words, extendido=False):
        password_list = set()

        # Define los caracteres especiales segÃºn el modo
        special_chars = ["%", "&", "*", "_", "+"] if extendido else ["!", "@", "#", "$"]

        for word in base_words:
            for char in special_chars:
                password_list.add(word + char)
                password_list.add(char + word)

        for word in base_words:
            for number in ["123", "2024", "01", "99"]:
                password_list.add(word + number)
                password_list.add(number + word)

        for combo in itertools.permutations(base_words, 2):
            password_list.add("".join(combo))
            password_list.add(combo[0] + "2024" + combo[1])

        return list(password_list)

    # ğŸ”„ Generar lista de contraseÃ±as
    generated_passwords = generate_passwords(base_words, extendido="--extendido" in sys.argv)

    # ğŸ“‚ Preguntar el nombre del archivo antes de guardarlo
    nombre_archivo = pedir_dato("\nğŸ“ Â¿CÃ³mo quieres nombrar el archivo de salida? (sin extensiÃ³n): ")
    if not nombre_archivo:
        nombre_archivo = "passwords"

    # ğŸ“ Guardar en el archivo elegido
    output_file = f"{nombre_archivo}.txt"
    with open(output_file, "w") as f:
        for pwd in generated_passwords:
            f.write(f"{pwd}\n")

    # âœ… Mensaje final
    print(f"\nâœ… Diccionario generado con Ã©xito. Se han creado {len(generated_passwords)} contraseÃ±as.")
    print(f"ğŸ“‚ Puedes revisarlo con: cat {output_file}")

except KeyboardInterrupt:
    print("\nâŒ InterrupciÃ³n por teclado detectada. Cerrando...")
    sys.exit(0)
